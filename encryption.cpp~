#include <iostream>

using namespace std;

string encryptDecrypt(string toEncrypt) {
   	char key = 'M'; //Any char will work
    string output = toEncrypt;
    
    for (int i = 0; i < toEncrypt.size(); i++){
        output[i] = toEncrypt[i] ^ key;
    }
    return output;
}

int main(int argc, char *argv[])
{
    //string encrypted = encryptDecrypt("Yubaraj Poudel");
    if(argc<3){
	cout<< "Invalid Tokens";
	cout<< "\n type in help for the infromation \n\n";
	return 0;
	}
    	string parameter = argv[1];
	string encrypted = argv[2];
	if(encrypted.compare("help") == 0 && parameter.compare("--")==0){
		cout << " encrypt sampleText [for encrypting the sample Text] \n\n";
		cout << " decrypt sampleText [ for decrypting the sample Text]\n\n";

		return 0;	
	}
	else if(parameter.compare("encrypt") == 0 && encrypted.size()>0){
		 cout << "Encrypted:" << encrypted << "\n";
   		 string decrypted = encryptDecrypt(encrypted);
   		 cout << "Decrypted:" << decrypted << "\n";

		return 0;	
	}
	
	else if(parameter.compare("decrypt") == 0 && encrypted.size()>0){
		 
		 cout << "Encrypted:" << encrypted << "\n";
   		// string decrypted = encryptDecrypt(encrypted);
   		// cout << "Decrypted:" << decrypted << "\n";
		return 0;
	
 	}
   	else{
		cout << "Invalid Tokens \n Please Type -- help for instructions";
		return 0;
	}
}
